<%- include('partials/header.ejs') %>
<body>
    <div class="container">
        <div class="main-wrapper">
            <div class="side-container">
                <aside>
                    <header>Aside</header>
                    <nav>
                        
                    </nav>
                </aside>
            </div>
            <main>
                <article>
                    <header>
                        <h1>Starting Content</h1>
                    </header>
                    <section>
                        <p><%= startingContent %></p>
                    </section>
                </article>

                <% getPosts.forEach(element => { %>
                <article>
                    <header>
                        <h1><%= element.title %></h1>
                    </header>
                    <section>
                        <p>
                            <%= element.content.substring(0, 100) + "..." %>
                            <a href="/posts/<%= element.title %>">Read More</a>
                        </p>
                    </section>
                </article>
               <% }); %>
              
            </main>
        </div>
    </div>
</body>
<%- include('partials/footer.ejs') %>
